DEFAULT menu.c32
TIMEOUT 600
MENU TITLE UPJS BOOT MENU

PROMPT 0
#DISPLAY boot.msg

LABEL local
MENU LABEL Boot local disks
LOCALBOOT 0

INCLUDE pxelinux.cfg/fedora
INCLUDE pxelinux.cfg/centos
INCLUDE pxelinux.cfg/custom

LABEL hdt
MENU LABEL Hardware detection tool
KERNEL hdt.c32

LABEL memtest
MENU LABEL Memtest86+
KERNEL memtest/memtest
APPEND -

#LABEL vpe
#KERNEL ../Boot/winpe2.0

# Parted Magic
#boot the kernel and initramfs over PXE.
LABEL pmagic
MENU LABEL Parted Magic
KERNEL pmagic/bzImage
#INITRD pmagic/initrd.img
APPEND initrd=pmagic/initrd.img edd=off load_ramdisk=1 prompt_ramdisk=0 rw vga=normal loglevel=9 max_loop=256
#APPEND initrd=pmagic/initrd.img edd=off noapic load_ramdisk=1 prompt_ramdisk=0 rw vga=791 loglevel=0 max_loop=256

# iPXE
LABEL ipxe
MENU LABEL iPXE menu
KERNEL ipxe/ipxe.lkrn
APPEND -

LABEL quit
MENU LABEL Exit to command line
MENU QUIT
